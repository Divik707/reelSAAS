generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String @id @default(uuid())
  fullName           String
  email              String @unique
  password           String
  timestamp          DateTime @default(now())
}

model FoodPartner {
  id                 String  @id @default(uuid())
  fullName           String
  email              String @unique
  password           String
  timestamp          DateTime @default(now())
  foods               Food[]
}

model Food {
  id            String   @id @default(uuid())
  foodPartnerId String
  foodPartner   FoodPartner @relation(fields: [foodPartnerId], references: [id])
  video         String   @unique    
  title         String
  description   String? 
  createdAt     DateTime @default(now())
}